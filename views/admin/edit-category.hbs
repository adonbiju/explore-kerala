<script>
    function viewImg(event) {
        document.getElementById("imgView").src =
        URL.createObjectURL(event.target.files[0]);
    }
</script>
<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <div class="page-header">
                <h4 class="page-title">CATEGORY MANAGER</h4>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Enter Category Details</div>
                        </div>

                        <div class="card-body">
                            <form method="POST" enctype="multipart/form-data" action="/admin/edit-category/{{categoryDetail._id}}">
                            <div class="row">
                               
                                <div class="col-md-6 col-lg-4">
                                    <div class="form-group ">
                                        <label>Category Name</label>
                                        <input type="text" name="categoryName"class="form-control" value="{{categoryDetail.categoryName}}">
                                    </div>
                                </div>
                                  <div class="col-md-6 col-lg-4">
                                    <div class="form-group ">
                                        <label>Description</label>
                                        <input type="text" name="description"class="form-control" value="{{categoryDetail.description}}">
                                    </div>
                                </div>
                                 <div class="col-md-6 col-lg-4">
                                    <div class="form-group">
                                        <label>Image</label>
                                        <img src="/category/{{categoryDetail._id}}.jpg"  class="form-control-file"  style="width: 70px;heiht:70px" alt="" id="imgView" />
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-4">
                                    <div class="form-group">
                                        <label>Upload an Image</label>
                                        <input type="file" class="form-control-file" onchange="viewImg(event)" name="image"  />
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-4">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                           
                            </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
           
        </div>
    </div>
</div>

                  