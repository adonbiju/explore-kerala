<main class="site-main">
  <section class="mb-30px">
    <div class="container">

      <div class="hero-banner" style="background: url(/user-images/hero-banner.png)">
        <div class="hero-banner__content">
          <h3>Tours & Travels</h3>
          <h1>Amazing Places on Kerla</h1>
          <h4>
            <script>document.write(new Date());</script>
          </h4>
        </div>
      </div>

    </div>
  </section>


  <section>
    <div class="container">
      <div class="owl-carousel owl-theme blog-slider">
        {{#each allCategory}}
        <div class="card blog__slide text-center">
          <div class="blog__slide__img">
            <img class="card-img rounded-0"  src="/category/{{this._id}}.jpg" alt="">
          </div>
          <div class="blog__slide__content">
            <a class="blog__slide__label" href="/district-detail/{{this.categoryName}}">{{this.categoryName}}</a>
            <h3><a href="/district-detail/{{this.categoryName}}">{{this.description}}</a></h3>

          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>


  <section class="blog-post-area section-margin mt-4">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          {{#each blogs}}
          <div class="single-recent-blog-post">
            <div class="thumb">
              <img class="img-fluid" src="/images/{{this._id}}.jpg" alt="">
              <ul class="thumb-info">
                <li><a href="#"><i class="ti-user"></i>{{this.userName}}</a></li>
                <li><a href="#"><i class="ti-notepad"></i>{{this.date}}</a></li>

              </ul>
            </div>
            <div class="details mt-20">
              <a href="/blog-details/{{this._id}}">
                <h3>{{this.destination}}. </h3>
              </a>
              <p class="tag-list-inline">District: <a  href="/district-detail/{{this.district}}">{{this.district}}</a></p>
              <p>{{this.paragraph1}}</p>
              <a class="button" href="/blog-details/{{this._id}}">Read More <i class="ti-arrow-right"></i></a>
            </div>
          </div>
          {{/each}}
        </div>


        <!-- Start Blog Post Siddebar -->
        <div class="col-lg-4 sidebar-widgets">
          <div class="widget-wrap">
            <div class="single-sidebar-widget post-category-widget">
              <h4 class="single-sidebar-widget__title">Catgory</h4>
              <ul class="cat-list mt-20">
                {{#each allCategory}}

                <li>
                  <a href="/district-detail/{{this.categoryName}}" class="d-flex justify-content-center">
                    <p>{{this.categoryName}}</p>
                  </a>
                </li>

                {{/each}}
              </ul>

            </div>
          </div>
        </div>


      </div>
  
    </div>
  </section>
</main>