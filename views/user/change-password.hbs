<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="comment-form">
                <h4>Enter your details</h4>
               <form method="POST" enctype="multipart/form-data" action="/change-password/{{user_login._id}}">
                    <div class="form-group">
                        <label>Old password:</label>
                        <input type="password" name="oldpassword" pattern=".{8,16}" title="Password must be 8 characters" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>New password:</label>
                        <input type="password" name="newpassword" pattern=".{8,16}" title="Password must be 8 characters" class="form-control" required>
                    </div>
                     {{#if passwordmessage}}
                     <div class="form-group">
                        <label class="text-small text-danger">{{passwordmessage}}</label>
                    </div>
                     {{/if}}
                    <button type="submit" class="button submit_btn" >Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
