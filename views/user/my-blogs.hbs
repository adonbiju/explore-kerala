<div class="container">
     <h1 style="font-size: 32px;text-align: center;">My Blogs</h1><br>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                  {{#each myBlogDetails}}
                <div class="col-md-4">
                    <div class="single-recent-blog-post card-view">
                        <div class="thumb">
                            <img class="card-img rounded-0" src="/images/{{this._id}}.jpg" alt="">
                            <ul class="thumb-info">
                                {{!-- <li><a href="#"><i class="ti-user"></i>Admin</a></li>
                                <li><a href="#"><i class="ti-themify-favicon"></i>2 Comments</a></li> --}}
                            </ul>
                        </div>
                        <div class="details mt-20">
                            <a href="/blog-details/{{this._id}}">
                                <h3>{{destination}}</h3>
                            </a>
                            
                            <p>{{paragraph1}}</p>
                     
                            <a class="button"  href="/edit-blog-details/{{this._id}}">Edit</a>
                            <a class="button"  href="/delete-blog/{{this._id}}" onclick="deleteblog(event)">Delete</a>
                        </div>
                    </div>
                </div>
                 {{/each}}
            </div>
        </div>
       
    </div>
</div>