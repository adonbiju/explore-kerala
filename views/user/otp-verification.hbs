<div class="d-flex justify-content-center align-items-center container otp">
    <div class="card py-5 px-3">
        <h5 class="m-0">Mobile phone verification</h5>
        <span class="mobile-text">Enter the code we just send on your mobile phone <b class="text-danger">{{mobileNumber}}</b></span>
        <form method="POST" action="/otp-verification">
        <div class="d-flex flex-row mt-3">
            <input type="tel" name="otp" class="form-control" autofocus="" />
        </div>
       {{#if invalidOtp}}
       <div class="d-flex flex-row mt-3">
           <label style="color: #f10707;">Otp entered is incorrect!!!!</label>
        </div>
       {{/if}}
        <div class="d-flex flex-row mt-3" >
            <button type="submit" class=" btn btn-dark ">Submit otp</button>
            
        </div>
        </form>
    </div>
</div>
<style>
    .card {
        width: 350px;
        padding: 10px;
        border-radius: 20px;
        background: #fff;
        border: none;
        height: 350px;
        position: relative;
    }

    .otp {
        height: 60vh;
    }


    .mobile-text {
        color: #989696b8;
        font-size: 15px;
    }

    .form-control {
        margin-right: 12px;
    }

    .form-control:focus {
        color: #495057;
        background-color: #fff;
        border-color: #ff8880;
        outline: 0;
        box-shadow: none;
    }

    .cursor {
        cursor: pointer;
    }
</style>