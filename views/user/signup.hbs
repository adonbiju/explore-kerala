<div class="content">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <img src="icon/undraw_remotely_2j6y.svg" alt="Image" class="img-fluid">
        </div>
        <div class="col-md-6 contents">
          <div class="row justify-content-center">
            <div class="col-md-8">
              <div class="mb-4">
              <h3>Signup</h3>   
            </div>
            <form action="/signup" method="POST">
            <div class="form-group first">
                <label for="">Name</label>
                <input type="text" name="name" class="form-control" id="" required>
              </div>
              <div class="form-group first">
                <label for="">Email</label>
                <input type="email" name="email" class="form-control" id="" required>
              </div>
              <div class="form-group last mb-4">
                <label for="">Password</label>
                <input type="password" name="password" class="form-control" id="" pattern=".{8,16}" title="Password must be 8 characters"required>
              </div>
               {{#if emailExist}}
              <div class="form-group last mb-4">
                <label for="" style="color: #f10707;">{{emailExist}}</label>
              </div>
              {{/if}}
              <input type="submit" value="Log In" class="btn btn-block btn-primary">
              <div class="form-group last mb-4">
                  <span class="d-block text-left my-4 text-muted"><p><a href="/login" target="">Already have an account</a> </p></span>
              </div>
             
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>